        android:id="@+id/project1"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:width="250dp"
        android:onClick="goToProject"

        />

    <Button
